{
  "name": "authorize.bot",
  "version": "1.0",
  "purpose": "Authorization + proof receipt layer for on-chain approvals (no custody, no execution).",
  "base_url": "https://authorize.bot",
  "human_ui": {
    "home": "/authorize",
    "create": "/authorize/new",
    "receipt": "/authorize/a/{id}",
    "agent_contract": "/authorize/agent"
  },
  "tools": [
    {
      "name": "createAuthorization",
      "method": "POST",
      "path": "/api/authorize",
      "description": "Create an authorization intent record."
    },
    {
      "name": "getAuthorization",
      "method": "GET",
      "path": "/api/authorize/{id}",
      "description": "Fetch an authorization record."
    },
    {
      "name": "setAuthorizationProof",
      "method": "PATCH",
      "path": "/api/authorize/{id}",
      "description": "Link or replace settlement proof (tx hash or usdc.bot receipt)."
    },
    {
      "name": "revokeAuthorization",
      "method": "PATCH",
      "path": "/api/authorize/{id}",
      "description": "Revoke an authorization record."
    }
  ]
}
